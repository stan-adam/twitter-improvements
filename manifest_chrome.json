{
    "manifest_version": 3,
    "name": "Twitter Improvements",
    "version": "1.4",
  
    "description": "Adds new buttons to each tweet on twitter",
  
    "icons": {
      "48": "icons/download-48.png"
    },

    "action": {
      "default_icon": "icons/download-48.png",
      "default_title": "Image Reverser",
      "default_popup": "popup/popup.html"
    },

    "permissions": [
      "contextMenus",
      "activeTab",
      "downloads",
      "tabs",
      "clipboardWrite",
      "storage"
    ],

    "background": {
      "service_worker": "background.js"
    },

    "host_permissions": [
      "https://twitter.com/*",
      "https://x.com/*"
    ],

    "content_scripts": [
      {
        "matches": [
          "https://twitter.com/*", 
          "https://x.com/*"
        ],
        "js": ["twitter_improvements.js"],
        "css": ["twitter_improvements.css"]
      }
    ]
}